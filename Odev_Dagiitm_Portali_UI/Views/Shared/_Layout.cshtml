<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Odev_Dagiitm_Portali_UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Odev_Dagiitm_Portali_UI.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" /> 

    
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ödev Dağıtım Portalı</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex @* justify-content-between *@">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark " asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa  </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark AdminPage Logined" asp-area="" asp-controller="Admin" asp-action="Index">Admin Paneli</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark StudentPage Logined" asp-area="" asp-controller="Homework" asp-action="StudentHomework">Ödevlerim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark StudentPage Logined" asp-area="" asp-controller="Homework" asp-action="MyHomeworkSubmission">Ödev Teslimlerim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark Logined TeacherPage" asp-area="" asp-controller="Homework" asp-action="AddHomework">Ödev Ekle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark Logined TeacherPage" asp-area="" asp-controller="Homework" asp-action="MyHomeworks">Ödevler</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark Logined TeacherPage" asp-area="" asp-controller="Homework" asp-action="HomeworkSubmission">Teslimler</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav justify-content-end ">

                        <li class="nav-item NotLogined">
                            <a class="nav-link text-dark" href="~/Home/Login">Oturum Aç</a>
                        </li>
                        <li class="nav-item NotLogined">
                            <a class="nav-link text-dark" href="~/Home/Register">Kayıt Ol</a>
                        </li>

                        @* Dropdown *@
                        <li class="nav-item dropdown Logined ">

                            <a class="nav-link text-dark dropdown-toggle" href="#" id="UserName" role="button" data-bs-toggle="dropdown" aria-expanded="false"></a>

                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark " aria-labelledby="UserName">
                                <li> <a class="dropdown-item" href="~/Home/UserPage"><i class="bi bi-person-fill"></i> Hesabım</a></li>
                                <li> <a class="dropdown-item " data-bs-toggle="modal" data-bs-target="#logoutModal" href="#"> <i class="bi bi-box-arrow-right"></i> Güvenli Çıkış </a></li>

                            </ul>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">

          
            <!-- Modal -->
            <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Oturumu Kapat</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <span>
                                Çıkış yapmak istediğinize emin misiniz ?
                            </span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                            <a href="#" id="Logout" class="btn btn-danger text-white">Çıkış Yap</a>
                        </div>
                    </div>
                </div>
            </div>




            @* Logout Modal *@
            @*  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Oturumu Kapat</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
            </button>
            </div>
            <div class="modal-body">Oturum Kapatılacaktır!</div>
            <div class="modal-footer">
            <button class="btn btn-primary" type="button" data-dismiss="modal">İptal</button>
            <a class="btn btn-danger" id="Logout">Güvenli Çıkış</a>
            </div>
            </div>
            </div>
            </div> *@


            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            2024 - Ödev Dağıtım Portalı
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
