@{
    ViewData["Title"] = "Login";
}

<div class="row mt-5">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div id="divResult"></div>
        <div class="card mb-2">
            <div class="card-header"><h3>Oturum Aç</h3></div>
            <div class="card-body">
                <div class="mb-2">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="txtUserName" />
                </div>
                <div class="mb-2">
                    <label>Parola</label>
                    <input type="password" class="form-control" id="txtPassword" />
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" id="btnLogin">Oturum Aç</button>
            </div>
        </div>
        <div id="result"></div>
    </div>

</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
          

            $("#btnLogin").click(function () {
                var userName = $("#txtUserName").val();
                var password = $("#txtPassword").val();
                var loginData = new Object();
                loginData.UserName = userName;
                loginData.Password = password;

                $.ajax({
                    url: apiUrl + "User/SignIn",
                    method: "POST",
                    data: JSON.stringify(loginData),
                    contentType: "application/json",
                    success: function (data) {
                        if (data.status) {
                            console.log(apiUrl + "User/SignIn");
                            localStorage.setItem("token", data.message);
                            var payload1 = parseJwt(data.message);
                            var userRoles1 = payload1["http://schemas.microsoft.com/ws/2008/06/identity/claims/role"];
                            if (userRoles1.includes("Admin")) {
                                location.href = "/Admin/Index";

                            }
                            else {
                                location.href = "/Home/Index";
                            }
                        } else {
                            $("#result")
                                .show()
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message)
                                .fadeOut(3000);

                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });


            });




        });
    </script>
}
